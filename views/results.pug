html
  head
    title="Poll"
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')

  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
      a.navbar-brand(href='#') Census
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/') Home
          span.sr-only (current)
          li.nav-item
            a.nav-link(href='./make') Make
    div.container
      h1 Welcome to the results page
      br
      h2= poll.question
      br
      h5#total.d-inline-block= poll.results[0]+poll.results[1]+poll.results[2]+poll.results[3]
      h5.d-inline-block &nbspresponses
      br
      br
      h3= poll.choices[0]
      h5.d-inline-block Votes:&nbsp
      h4#result0.d-inline-block= poll.results[0]
      .progress
        .progress-bar#bar0(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:0%')
      br
      h3= poll.choices[1]
      h5.d-inline-block Votes:&nbsp
      h4#result1.d-inline-block= poll.results[1]
      .progress
        .progress-bar#bar1(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:0%')
      br
      h3= poll.choices[2]
      h5.d-inline-block Votes:&nbsp
      h4#result2.d-inline-block= poll.results[2]
      .progress
        .progress-bar#bar2(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:0%')
      br
      h3= poll.choices[3]
      h5.d-inline-block Votes:&nbsp
      h4#result3.d-inline-block= poll.results[3]
      .progress
        .progress-bar#bar3(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width:0%')

  script(src='/bower_components/jquery/dist/jquery.js')
  script(src='/main.js')
  script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
